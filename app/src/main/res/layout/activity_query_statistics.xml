<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/select_tab_layout_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_tab_checked_left"
            android:gravity="center"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:text="@string/item_statistics"
            android:textColor="@color/white"
            android:textSize="@dimen/ts14" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/tv_time_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:text="@string/time_statistics"
            android:textSize="@dimen/ts14" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/tv_unit_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:text="@string/unit_statistics"
            android:textSize="@dimen/ts14" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/tv_result_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:text="@string/result_statistics"
            android:textSize="@dimen/ts14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_system_bg"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:gravity="center">

            <TableRow>

                <TextView
                    android:id="@+id/tv_table01"
                    style="@style/listViewTable"
                    android:layout_weight="5"
                    android:text="@string/item_name" />

                <TextView
                    android:id="@+id/tv_table02"
                    style="@style/listViewTable"
                    android:layout_weight="1"
                    android:text="@string/quantity" />
            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:background="@color/white"
            android:divider="@null"
            android:scrollbars="none" />

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/combineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_no_data"
            style="@style/layout_wrap"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_no_data"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="@string/system_no_data"
            android:textColor="@color/text_color_8b8b8b"
            android:textSize="@dimen/ts18"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>