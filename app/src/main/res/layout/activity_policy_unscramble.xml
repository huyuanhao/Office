<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_split_line_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!--
             <com.powerrich.xzsp.oa.view.PullToRefreshListView
            android:id="@+id/lv_policy_unscramble"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        -->

        <ListView
            android:id="@+id/lv_policy_unscramble"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/gray_system_bg"
            android:dividerHeight="0.1dip" />

        <TextView
            android:id="@+id/tv_no_data"
            style="@style/layout_wrap"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_no_data"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="@string/system_no_data"
            android:textColor="@color/text_color_8b8b8b"
            android:textSize="@dimen/ts18"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>