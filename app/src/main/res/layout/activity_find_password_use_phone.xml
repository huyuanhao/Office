<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_system_bg"
    android:orientation="vertical">

    <include
        layout="@layout/common_title_bar"/>
    <LinearLayout
        android:id="@+id/ll_gr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="horizontal"
            android:padding="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号找回"
                android:textColor="@color/light_black"
                android:textSize="50px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/light_black"
                android:textSize="50px" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:padding="45px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/light_black"
                android:textSize="50px" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:padding="45px"
                    android:maxLength="6"
                    android:textColorHint="@color/gray"
                    android:textSize="50px" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/valicode_selecter_shap"
                    android:padding="20px"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="50px" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="35px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用&#160;&#160;户&#160;&#160;名"
                android:textColor="@color/light_black"
                android:textSize="50px" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入用户名"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="18"
                android:padding="45px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="35px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业名称"
                android:textColor="@color/light_black"
                android:textSize="50px" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_qyname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入企业名称"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="20"
                android:padding="45px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用代码"
                android:textColor="@color/light_black"
                android:textSize="50px" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_xydm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入统一社会信用代码"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="18"
                android:padding="45px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人姓名"
                android:textColor="@color/light_black"
                android:textSize="50px" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_frname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入法人姓名"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="10"
                android:padding="45px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/light_black"
                android:textSize="50px" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_fridcard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入法人身份证号码"
                android:inputType="number"
                android:digits="0123456789xyzXYZ"
                android:maxLines="1"
                android:maxLength="18"
                android:padding="45px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/table_background" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="145px"
        android:layout_marginBottom="145px"
        android:layout_marginRight="45px"
        android:background="@drawable/blue_corners_dp"
        android:gravity="center"
        android:textSize="50px"
        android:text="@string/next_step"
        android:textColor="@color/white"/>

</LinearLayout>