<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp10"
                android:text="@string/id_message"
                android:textColor="@color/black"
                android:textSize="@dimen/ts16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hite_id_message"
                android:textColor="@color/red"
                android:textSize="@dimen/ts12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/white_shape"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">


            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_name"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/hint_name"
                android:padding="@dimen/dp8"
                android:singleLine="true"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_system_bg" />


            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_sex"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/sex"
                android:padding="@dimen/dp8"
                android:singleLine="true"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_system_bg" />


            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_id_card"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/hint_idcard"
                android:maxLength="18"
                android:padding="@dimen/dp8"
                android:singleLine="true"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_system_bg" />


            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_phone"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/hint_mobil_num"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="@dimen/dp8"
                android:singleLine="true"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_system_bg" />


            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_nation"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/nation"
                android:maxLines="3"
                android:padding="@dimen/dp8"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_system_bg" />


            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_address"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/hint_address"
                android:maxLines="3"
                android:padding="@dimen/dp8"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp10"
                android:text="@string/upload_id_image"
                android:textColor="@color/black"
                android:textSize="@dimen/ts16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_id_image_massage"
                android:textColor="@color/red"
                android:textSize="@dimen/ts12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/white_shape"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/white_shape_gray"
                android:orientation="vertical"
                android:padding="@dimen/dp5">

                <ImageView
                    android:id="@+id/id_card_front"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="center"
                    android:src="@drawable/ident_idcard_fr" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/white_shape_gray"
                android:padding="@dimen/dp5">

                <ImageView
                    android:id="@+id/id_card_back"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="center"
                    android:src="@drawable/ident_idcard_ba" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hite_id_message"
                android:textSize="@dimen/ts12" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_submit"
            style="@style/normal_item_name"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/padding_20"
            android:background="@drawable/blue_corners_icon"
            android:padding="@dimen/padding_10"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>