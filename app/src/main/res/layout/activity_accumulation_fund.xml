<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AccumulationFundActivity">
    <include layout="@layout/common_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/acc_fund1"
        android:layout_width="match_parent"
        android:layout_height="158px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49px"
            android:drawableLeft="@drawable/acc_fund1"
            android:drawablePadding="32px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="公积金基本信息"
            android:textSize="46px"
            android:textColor="#333333"/>
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="56px"
            android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:background="@color/gray_system_bg"/>
    <RelativeLayout
        android:id="@+id/acc_fund2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="158px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49px"
            android:drawableLeft="@drawable/acc_fund2"
            android:drawablePadding="32px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="公积金明细查询"
            android:textSize="46px"
            android:textColor="#333333"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="52.6px"
            android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:visibility="gone"
        android:background="#F0F0F0"/>
    <RelativeLayout
        android:id="@+id/acc_fund3"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="158px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49px"
            android:drawableLeft="@drawable/acc_fund3"
            android:drawablePadding="32px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="贷款基本信息"
            android:textSize="46px"
            android:textColor="#333333"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="52.6px"
            android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:visibility="gone"
        android:background="#F0F0F0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_system_bg"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="27px"
            android:layout_marginBottom="27px"
            android:textSize="30px"
            android:textColor="#999999"
            android:text="鹰潭市住房公积金管理中心"/>
    </LinearLayout>
</LinearLayout>