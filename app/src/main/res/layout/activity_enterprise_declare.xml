<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_project_name"
                    android:textSize="@dimen/ts14" />

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_unit_name"
                    android:textSize="@dimen/ts14" />

                <TextView
                    android:id="@+id/tv_enterprise_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_legal_representative"
                    android:textSize="@dimen/ts14" />

                <TextView
                    android:id="@+id/tv_legal_representative"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_credit_code"
                    android:textSize="@dimen/ts14" />

                <TextView
                    android:id="@+id/tv_credit_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_contact"
                    android:textSize="@dimen/ts14" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_contact_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_phone"
                    android:textSize="@dimen/ts14" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_mobile_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_id_number"
                    android:textSize="@dimen/ts14" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_id_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:digits="0123456789xX"
                    android:inputType="text"
                    android:maxLength="18"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_way"
                    android:textSize="@dimen/ts14" />

                <TextView
                    android:id="@+id/tv_express_ways"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:drawableRight="@drawable/btn_expand"
                    android:padding="8dp"
                    android:tag="0"
                    android:textSize="@dimen/ts14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_communication_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_address"
                    android:textSize="@dimen/ts14" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_postal_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:padding="8dp"
                    android:textSize="@dimen/ts14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_post_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="@string/online_declare_email_address"
                    android:textSize="@dimen/ts14" />

                <Spinner
                    android:id="@+id/spinner_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_border_white_bg"
                    android:ellipsize="marquee" />


                <TextView
                    android:id="@+id/tv_add_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_white_bg"
                    android:padding="8dp"
                    android:text="@string/online_declare_add_address"
                    android:textSize="@dimen/ts14"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_margin="@dimen/padding_20"
            android:background="@drawable/blue_corners_icon"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/ts16" />
    </LinearLayout>
</RelativeLayout>