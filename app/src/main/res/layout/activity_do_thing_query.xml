<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_system_bg"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:id="@+id/lt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:background="@drawable/white_shape_gray"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_query_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="21px"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="20px"
                android:hint="请输入受理编号或扫描二维码"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingBottom="31px"
                android:paddingLeft="28px"
                android:paddingRight="28px"
                android:paddingTop="31px"
                android:textColorHint="#999999"
                android:textSize="40px" />

            <LinearLayout
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="34px"
                android:paddingRight="34px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_common" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:background="@drawable/blue2_corners_icon"
            android:paddingBottom="30px"
            android:paddingLeft="45px"
            android:paddingRight="45px"
            android:paddingTop="30px"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="44px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_system_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44px"
                android:layout_marginLeft="26px"
                android:layout_marginTop="53px"
                android:text="鹰潭行政服务中心办件统计"
                android:textColor="@color/common_gray"
                android:textSize="50px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月受理："
                android:textColor="@color/color_333333"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_current_month_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="2034"
                android:textColor="@color/color_fc7705"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="件"
                android:textColor="@color/color_333333"
                android:textSize="50px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/gray_system_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月办结："
                android:textColor="@color/color_333333"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_current_month_conclude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="1003"
                android:textColor="@color/color_fc7705"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="件"
                android:textColor="@color/color_333333"
                android:textSize="50px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/gray_system_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计受理："
                android:textColor="@color/color_333333"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_total_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="20281"
                android:textColor="@color/color_fc7705"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="件"
                android:textColor="@color/color_333333"
                android:textSize="50px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/gray_system_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计办结："
                android:textColor="@color/color_333333"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_total_conclude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="10135"
                android:textColor="@color/color_fc7705"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="件"
                android:textColor="@color/color_333333"
                android:textSize="50px" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_result"
        layout="@layout/do_thing_query_item"
        android:visibility="gone" />
</LinearLayout>