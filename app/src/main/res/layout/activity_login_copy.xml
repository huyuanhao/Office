<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.powerrich.office.oa.view.KeyboardLayout
        android:id="@+id/kb_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="280px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100px">

                    <ImageView
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:layout_marginTop="65px"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="190px"
                        android:layout_marginTop="65px"
                        android:text="智 慧 鹰 潭"
                        android:textSize="60px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="195px"
                        android:layout_marginTop="160px"
                        android:text="ZHIHUIYINGTAN"
                        android:textSize="38px"
                        android:textStyle="bold" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="100px"
                    android:orientation="vertical">

                    <!-- <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableTop="@drawable/bm_ty"
                        android:drawablePadding="@dimen/padding_20"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/ts24"
                        android:textColor="@color/blue_main"
                        android:text="办事服务"/> -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80px"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_passwd_login"
                            style="@style/normal_item_name"
                            android:layout_weight="1"
                            android:background="@drawable/login_personal_selector"
                            android:gravity="center"
                            android:paddingBottom="15px"
                            android:text="@string/passwd_login"
                            android:textSize="50px" />

                        <TextView
                            style="@style/normal_item_name"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_eid_login"
                            style="@style/normal_item_name"
                            android:layout_weight="1"
                            android:background="@drawable/login_company_selector"
                            android:gravity="center"
                            android:paddingBottom="15px"
                            android:text="@string/eid_login"
                            android:textSize="50px" />
                    </LinearLayout>

                    <com.powerrich.office.oa.view.DeletableEditText
                        android:id="@+id/et_name"
                        style="@style/normal_item_name"
                        android:layout_width="match_parent"
                        android:layout_marginTop="80px"
                        android:background="@drawable/shape_login_et"
                        android:drawablePadding="15px"
                        android:drawableRight="@drawable/login_clear_s"
                        android:hint="@string/login_name_hint"
                        android:padding="30px"
                        android:singleLine="true"
                        android:textColorHint="#666666"
                        android:textSize="42px" />

                    <com.powerrich.office.oa.view.DeletableEditText
                        android:id="@+id/et_psw"
                        style="@style/normal_item_name"
                        android:layout_width="match_parent"
                        android:layout_marginTop="50px"
                        android:background="@drawable/shape_login_et"
                        android:drawablePadding="15px"
                        android:drawableRight="@drawable/login_clear_s"
                        android:ems="10"
                        android:hint="@string/login_psw_hint"
                        android:padding="30px"
                        android:password="true"
                        android:singleLine="true"
                        android:textColorHint="#666666"
                        android:textSize="42px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_save_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/check_box_selecter"
                            android:paddingLeft="15px"
                            android:text="@string/save_password"
                            android:textColor="@color/common_gray"
                            android:textSize="42px" />

                        <TextView
                            android:id="@+id/tv_forget_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/forget_psw"
                            android:textColor="@color/common_gray"
                            android:textSize="42px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20px"
                            android:typeface="serif" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/bt_login"
                        style="@style/normal_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:layout_marginTop="120px"
                        android:background="@drawable/blue_corners_icon"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="50px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/bt_register"
                    android:layout_width="match_parent"
                    android:layout_height="55px"
                    android:layout_marginTop="60px"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/common_gray"
                    android:textSize="42px" />

            </LinearLayout>

        </ScrollView>
    </com.powerrich.office.oa.view.KeyboardLayout>


</LinearLayout>