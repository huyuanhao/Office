<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:background="@color/blue_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20px"
        android:layout_marginTop="21px"
        android:layout_marginRight="30px"
        android:layout_marginBottom="15px"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="115px"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:paddingRight="30px"
            android:src="@drawable/white_icon_back"></ImageView>


        <com.powerrich.office.oa.view.DeletableEditText
            android:id="@+id/et_query_content"
            style="@style/normal_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/white_shape_search"
            android:drawableRight="@drawable/login_clear_s"
            android:drawablePadding="20px"
            android:hint="搜索服务、事项"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="28px"
            android:paddingTop="31px"
            android:paddingRight="28px"
            android:paddingBottom="31px"
            android:textColor="@color/black"
            android:textColorHint="#999999"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21px"
            android:background="@drawable/blue2_corners_icon"
            android:gravity="center"
            android:paddingLeft="46px"
            android:paddingTop="29px"
            android:paddingRight="45px"
            android:paddingBottom="30px"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="44px"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>