<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_90"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/widget_size_70"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="01-02 08:00"
        android:textSize="@dimen/font_size_14" />

    <LinearLayout
        android:id="@+id/llt_middle"
        android:layout_width="@dimen/widget_size_30"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_time"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_35"
            android:background="@drawable/dash_line" />

        <ImageView
            android:id="@+id/iv_middle"
            android:layout_width="@dimen/widget_size_20"
            android:layout_height="@dimen/widget_size_20"
            android:layout_gravity="center"
            android:src="@drawable/arr_blue" />

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_35"
            android:background="@drawable/dash_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_15"
        android:layout_toRightOf="@+id/llt_middle"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_17"
            android:text="运输中"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="@dimen/widget_size_5"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="离开[aaa],下一站[bbb]"/>
    </LinearLayout>


</RelativeLayout>