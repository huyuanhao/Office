<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"/>

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:text="一.提取信息录入"
        android:textSize="35px"
        android:textColor="@color/color_999999"
        android:background="#ECF0F2"
        android:paddingTop="48px"
        android:paddingLeft="53px"
        android:textStyle="bold"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="收款人"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:text="0"/>
    </RelativeLayout>

    <include layout="@layout/line_gray"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="个人账户余额(元)"/>

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:text="元"/>
    </RelativeLayout>

    <include layout="@layout/line_gray"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="销户利息(元)"/>

        <TextView
            android:id="@+id/tv_lixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:text="0"/>
    </RelativeLayout>

    <include layout="@layout/line_gray"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="提取金额合计(元)"/>

        <TextView
            android:id="@+id/tv_heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:text="0"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bank1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="收款银行"/>

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:textColor="@color/color_999999"
            android:text="0"/>

        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <include layout="@layout/line_gray"/>

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="收款银行账号"/>

        <TextView
            android:id="@+id/tv_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_marginRight="60px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:text="0"/>

        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="手机号码"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:text="0"/>
    </RelativeLayout>

    <include layout="@layout/line_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:gravity="center_vertical"
        android:paddingRight="40px"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="46px"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:textColor="@color/text_color_0e0e0e"
            android:text="验证码"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="3"
            android:textSize="46px"
            android:inputType="number"
            android:hint="请输入验证码"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray_color"/>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:textSize="46px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="center"
            android:textColor="@color/text_color_0e0e0e"
            android:text="获取验证码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="800px"
        android:layout_height="120px"
        android:background="@drawable/blue2_corners2_icon"
        android:layout_marginTop="100px"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="办理完成"/>
</LinearLayout>