<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="54px"
        android:paddingTop="43px"
        android:paddingRight="54px"
        android:paddingBottom="32px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="服务渠道"
                android:textSize="46px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/color_333333"
                android:text="业务名称"
                android:textSize="46px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/color_333333"
                android:text="流程名称"
                android:textSize="46px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="10px"
                android:text="描&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;述"
                android:textSize="46px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:text="app"
                android:textSize="46px"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginTop="10px"
                android:text="个人贷款业务"
                android:textSize="46px"/>

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginTop="10px"
                android:text="借款人提前还本"
                android:textSize="46px"/>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginTop="10px"
                android:text="00000000000"
                android:textSize="46px"/>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="54px"
        android:layout_marginRight="54px"
        android:background="@color/bg_app"/>
    
    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:text="查看详细信息"
        android:gravity="center"
        android:textColor="@color/title_bar_color"
        android:textSize="46px"/>
</LinearLayout>