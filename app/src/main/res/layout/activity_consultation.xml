<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px140"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/px20"
                android:text="最新调查"
                android:textColor="@color/orange"
                android:textSize="@dimen/px50" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px5"
                android:nestedScrollingEnabled="false" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="167px"
                android:background="@color/white">

                <TextView
                    android:id="@+id/more_new"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px127"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_marginRight="@dimen/px40"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rect_titlebarcolor_10"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px50" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px140"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/px20"
                android:text="往期调查"
                android:textColor="@color/orange"
                android:textSize="@dimen/px50" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px5"
                android:nestedScrollingEnabled="false" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="167px"
                android:background="@color/white">

                <TextView
                    android:id="@+id/more_old"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px127"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_marginRight="@dimen/px40"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rect_titlebarcolor_10"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px50" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px140"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/px20"
                android:text="调查结果"
                android:textColor="@color/orange"
                android:textSize="@dimen/px50" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px5"
                android:nestedScrollingEnabled="false" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="167px"
                android:background="@color/white">

                <TextView
                    android:id="@+id/more_result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px127"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_marginRight="@dimen/px40"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rect_titlebarcolor_10"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px50" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>