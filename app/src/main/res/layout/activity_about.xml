<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_220"
        android:background="@drawable/layout_line_bg">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/widget_size_80"
            android:layout_height="@dimen/widget_size_80"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/widget_size_5"
            android:text="智慧鹰潭"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_18" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlt_version_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:background="@drawable/layout_line_bg">

            <TextView
                style="@style/user_info_item_left"
                android:text="当前版本号" />

            <TextView
                android:id="@+id/tv_version_code"
                style="@style/user_info_item_right_userinfo" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlt_checkversion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:background="@drawable/layout_line_bg">


            <TextView
                style="@style/user_info_item_left"
                android:text="检查版本" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/widget_size_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="当前已是最新版"
                    android:textColor="@color/gray"
                    android:layout_marginRight="@dimen/widget_size_3"
                    android:textSize="@dimen/font_size_14" />

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_gravity="center_vertical"
                    style="@style/user_info_next"
                    android:layout_marginRight="@dimen/widget_size_1"/>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:background="@drawable/layout_line_bg">

            <TextView
                style="@style/user_info_item_left"
                android:text="主办方" />

            <TextView
                style="@style/user_info_item_right_userinfo"
                android:text="鹰潭市人民政府" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>