        </LinearLayout>
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginBottom="@dimen/widget_size_20"
            android:background="@drawable/blue_corners_dp"
            android:gravity="center"
            android:text="提交"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/lt_page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_20"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_size_10"
            android:orientation="horizontal">

            <TextView
                style="@style/user_info_item_left"
                android:drawableLeft="@drawable/icon_xh"
                android:layout_marginTop="@dimen/widget_size_10"
                android:text="营业执照" />

            <ImageView
                android:id="@+id/iv_bsns"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:background="@drawable/actionsheet_bottom_pressed"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/widget_size_15"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_businiess"
            android:layout_width="@dimen/widget_size_100"
            android:layout_height="@dimen/widget_size_140"
            android:layout_marginTop="@dimen/widget_size_10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/actionsheet_bottom_pressed"/>


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_30"
            android:background="@drawable/blue_corners_dp"
            android:gravity="center"
            android:text="下一步"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <include layout="@layout/default_line" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lt_page3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_20"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/realname_suce" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/widget_size_20"
            android:text="审核中....请等待"
            android:textSize="@dimen/font_size_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="@dimen/widget_size_120"
            android:layout_height="@dimen/widget_size_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_40"
            android:background="@drawable/blue_corners_dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
</LinearLayout>