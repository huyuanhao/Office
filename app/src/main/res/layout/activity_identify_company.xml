                </RadioGroup>
            </LinearLayout>

            <include layout="@layout/default_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_info_item_left"
                    android:drawableLeft="@drawable/icon_xh"
                    android:text="组织机构名称" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_og_name"
                    style="@style/user_info_item_right_company"
                    android:background="@color/transparent"
                    android:hint="与登记组织机构保持一致" />

            </LinearLayout>

            <include layout="@layout/default_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_info_item_left"
                    android:drawableLeft="@drawable/icon_xh"
                    android:text="统一社会信用代码" />

                <com.powerrich.office.oa.view.NoEmojiEditText
