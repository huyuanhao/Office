                    android:layout_width="@dimen/widget_size_150"
                    android:layout_height="@dimen/widget_size_90"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/widget_size_10"
                    android:background="@drawable/realname_idca_oppo" />

                <ImageView
                    android:id="@+id/iv_card2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/widget_size_10"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/realname_idca_up" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rg_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/user_info_item_left"
                        android:drawableLeft="@drawable/icon_xh"
                        android:text="法人类型" />

                    <RadioButton
                        android:id="@+id/rb_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/widget_size_15"
                        android:text="企业"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/color_333333"
                        android:drawablePadding="@dimen/widget_size_1"
                        android:drawableLeft="@drawable/cb_appbg1"
                        android:button="@null" />
                    <RadioButton
                        android:id="@+id/rb_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/widget_size_1"
                        android:text="社会团体"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/color_333333"
                        android:drawablePadding="@dimen/widget_size_1"
                        android:drawableLeft="@drawable/cb_appbg1"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rb_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/widget_size_1"
                        android:text="事业单位"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/color_333333"
                        android:drawablePadding="@dimen/widget_size_1"
                        android:drawableLeft="@drawable/cb_appbg1"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rb_type4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/widget_size_1"
                        android:text="行政机关"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/color_333333"
                        android:drawablePadding="@dimen/widget_size_1"
                        android:drawableLeft="@drawable/cb_appbg1"
                        android:button="@null" />

