            </LinearLayout>

            <include layout="@layout/default_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_info_item_left"
                    android:drawableLeft="@drawable/icon_xh"
                    android:text="组织机构地址" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_og_address"
                    style="@style/user_info_item_right_company"
                    android:background="@color/transparent"
                    android:inputType="text"
                    android:hint="与登记的组织机构保持一致" />

            </LinearLayout>

            <include layout="@layout/default_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_size_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_info_item_left"
                    android:drawableLeft="@drawable/icon_xh"
                    android:text="法人姓名" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_card_name"
                    style="@style/user_info_item_right_fft"
                    android:background="@color/transparent"
                    android:inputType="text"
                    android:hint="请输入名称" />

            </RelativeLayout>

            <include layout="@layout/default_line" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_size_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_info_item_left"
                    android:drawableLeft="@drawable/icon_xh"
                    android:text="法人身份证号" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_idcard"
                    style="@style/user_info_item_right_fft"
                    android:background="@color/transparent"
                    android:textColorHint="@color/gray"
                    android:inputType="text"
                    android:hint="请输入身份证号码"
                    />

            </RelativeLayout>

            <include layout="@layout/default_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_size_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_info_item_left"
                    android:drawableLeft="@drawable/icon_xh"
                    android:text="证件地址" />

                <com.powerrich.office.oa.view.NoEmojiEditText
                    android:id="@+id/et_card_address"
                    style="@style/user_info_item_right_fft"
                    android:background="@color/transparent"
                    android:textColorHint="@color/gray"
                    android:hint="请输入身份证地址"
                    android:inputType="text"
                    />

            </RelativeLayout>
            <include layout="@layout/default_line" />

