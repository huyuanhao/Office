<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f9"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/common_title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:src="@drawable/auth_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginTop="20px"
            android:text="通过认证可获得社会保险待遇领取资格"
            android:textColor="@color/black"
            android:textSize="48px" />

        <Button
            android:id="@+id/ll_online_declare"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginBottom="60px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="60px"
            android:background="@drawable/blue_corners_icon"
            android:clickable="true"
            android:text="@string/face_auth"
            android:textColor="@color/white"
            android:textSize="50px" />

        <TextView
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:drawableLeft="@drawable/icon_gr_cjrj"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:text="@string/auth_list"
            android:textColor="@color/black"
            android:textSize="46px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:background="#e2e2e2" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:clickable="false"
            android:divider="@color/table_background"
            android:dividerHeight="1px"
            android:listSelector="#00000000"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>