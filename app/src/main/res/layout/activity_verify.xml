<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/widget_size_10"
        android:layout_marginRight="@dimen/widget_size_10"
        android:orientation="vertical">

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/layout_line_bg"
            android:hint="请输入姓名"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="10"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/font_size_14" />

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/layout_line_bg"
            android:hint="请输入身份证号"
            android:inputType="text"
            android:maxLength="20"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/font_size_14" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认身份信息，如果有误请修改"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_size_15"
            android:layout_marginTop="@dimen/widget_size_20"
            />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_40"
            android:background="@drawable/blue_corners_dp"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>


</LinearLayout>