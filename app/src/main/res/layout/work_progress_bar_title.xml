<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="245px"
        android:paddingBottom="80px"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:paddingTop="30px"
        android:scaleType="fitXY"
        android:src="@drawable/per_circle_one" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:text="个体户工商设立登记审批"
        android:textColor="@color/color_333333"
        android:textSize="50px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33px"
        android:layout_marginRight="33px"
        android:layout_marginTop="35px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事项编码："
            android:textColor="@color/common_gray"
            android:textSize="46px" />

        <TextView
            android:id="@+id/tv_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/common_gray"
            android:textSize="46px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_margin="35px"
        android:background="@color/gray_system_bg" />

</LinearLayout>