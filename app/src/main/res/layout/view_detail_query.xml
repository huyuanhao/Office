<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="50px"
    android:paddingRight="50px"
    android:layout_below="@+id/top"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/query_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31px"
        android:background="@drawable/gray_stroke_corners_bg2"
        android:drawableRight="@drawable/icon_boxmore_cbb"
        android:paddingBottom="29px"
        android:paddingLeft="31px"
        android:paddingRight="31px"
        android:paddingTop="29px"
        android:text="全部"
        android:textColor="#333333"

        android:textSize="46px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62px"
        android:text="起始日期"
        android:textColor="#666666"
        android:textSize="40px" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29px"
        android:background="@drawable/gray_stroke_corners_bg2"
        android:drawableRight="@drawable/icon_boxmore_cbb"
        android:paddingBottom="31px"
        android:paddingLeft="28px"
        android:paddingRight="31px"
        android:paddingTop="31px"
        android:text=""
        android:textColor="#333333"
        android:textSize="40px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="截至日期"
        android:textColor="#666666"
        android:textSize="40px" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29px"
        android:background="@drawable/gray_stroke_corners_bg2"
        android:drawableRight="@drawable/icon_boxmore_cbb"
        android:paddingBottom="31px"
        android:paddingLeft="28px"
        android:paddingRight="31px"
        android:paddingTop="31px"
        android:text=""
        android:textColor="#333333"
        android:textSize="40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/last_year"
            android:layout_width="300px"
            android:layout_height="120px"
            android:background="@drawable/gray_corners_bg2"
            android:gravity="center"
            android:text="最近一年"
            android:textColor="@color/white"
            android:textSize="50px" />

        <TextView
            android:id="@+id/last_half_year"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_marginLeft="86px"
            android:background="@drawable/gray_corners_bg3"
            android:gravity="center"
            android:text="最近半年"
            android:textColor="@color/white"
            android:textSize="50px" />

        <TextView
            android:id="@+id/last_month"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_marginLeft="86px"
            android:background="@drawable/gray_corners_bg3"
            android:gravity="center"
            android:text="最近一个月"
            android:textColor="@color/white"
            android:textSize="50px" />
    </LinearLayout>

    <Button
        android:id="@+id/search"
        android:layout_width="1078px"
        android:layout_height="128px"
        android:layout_marginBottom="65px"
        android:layout_marginTop="69px"
        android:background="@drawable/blue_corners_64px"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="50px" />
</LinearLayout>