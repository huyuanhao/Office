<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/civ"
        android:layout_width="@dimen/widget_size_220"
        android:layout_height="@dimen/widget_size_220"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/widget_size_40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/widget_size_100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_choose_imgs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:background="@drawable/blue_corners_dp"
            android:gravity="center"
            android:text="从相册选择一张"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />


        <TextView
            android:id="@+id/tv_tacking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_30"
            android:background="@drawable/white_corners_dp"
            android:gravity="center"
            android:text="拍一张照片"
            android:textColor="@color/title_bar_color"
            android:textSize="@dimen/font_size_14" />
        />


    </LinearLayout>
</RelativeLayout>