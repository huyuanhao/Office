<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_margin="30px"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rect_line_gray"
            android:completionThreshold="1"
            android:textSize="50px"
            android:paddingLeft="20px"
            android:hint="请输入9位户号" />

        <TextView
            android:id="@+id/search"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="20px"
            android:textSize="50px"
            android:background="@drawable/shape_app_button_5"
            android:text="查询" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="户号："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="户名："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="地址："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="实际水量："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/water_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="本期行至："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/this_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="上期行至："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/last_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="本期抄表日："
            android:textColor="#999999"
            android:textSize="46px" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_height="158px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56px"
            android:text="水表类型："
            android:textColor="#999999"
            android:visibility="gone"
            android:textSize="46px" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:text=""
            android:textColor="#333333"
            android:textSize="46px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/back"
        android:layout_width="1171px"
        android:layout_height="128px"
        android:text="返回"
        android:gravity="center"
        android:textSize="50px"
        android:layout_marginTop="60px"
        android:textColor="@color/white"
        android:background="@drawable/blue_corners_64px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"
        android:textSize="30px"
        android:textColor="#999999"
        android:visibility="gone"
        android:text="鹰潭市人力资源和社会保障局"/>
</LinearLayout>