<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/widget_size_12"
        android:background="@color/white"
        android:layout_marginRight="@dimen/widget_size_10"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_find_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/layout_line_bg"
            android:paddingBottom="@dimen/widget_size_10"
            android:text="手机号找回"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_20" />


        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/layout_line_bg"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_size_14" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/layout_line_bg">

            <TextView
                android:id="@+id/bt_verify"
                android:layout_width="@dimen/widget_size_110"
                android:layout_height="@dimen/widget_size_35"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/widget_size_7"
                android:layout_marginRight="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_7"
                android:background="@drawable/valicode_selecter_shap"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14" />

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_vetify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bt_verify"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>


        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_pwd1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/layout_line_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:maxLength="16"
            android:textSize="@dimen/font_size_14" />
        <ImageView
            android:id="@+id/iv_pwd_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_10"
            android:visibility="gone"
            android:background="@drawable/pasw_on" />

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_pwd2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/layout_line_bg"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:maxLength="16"
            android:textSize="@dimen/font_size_14" />


        <TextView
            android:id="@+id/tv_erro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_10"
            android:text="验证码输入不正确，请重新输入"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_60"
            android:background="@drawable/login_bt_corners_dp"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_15"
            android:text="已有账号，直接登录"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>


</LinearLayout>