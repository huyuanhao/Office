<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_system_bg"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="horizontal"
        android:padding="35px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前绑定邮箱为："
            android:textColor="@color/light_black"
            android:textSize="50px" />

        <TextView
            android:id="@+id/tv_current_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/light_black"
            android:textSize="50px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="35px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="@color/light_black"
            android:textSize="50px" />

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="10px"
            android:textColorHint="@color/gray"
            android:textSize="50px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/table_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="35px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="验证码"
            android:textColor="@color/light_black"
            android:textSize="50px" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_verify_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="10px"
                android:textColorHint="@color/gray"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/valicode_selecter_shap"
                android:padding="20px"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="50px" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/table_background" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="145px"
        android:layout_marginRight="45px"
        android:background="@drawable/blue_corners_dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="50px" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="45px"
        android:layout_marginRight="45px"
        android:background="@drawable/white_corners_dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue_main"
        android:textSize="50px" />


</LinearLayout>