<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="30px"
    android:paddingRight="30px">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34px"
        android:layout_marginTop="33px"
        android:ellipsize="end"
        android:lines="1"
        android:text="000000000"
        android:textColor="@color/black"
        android:textSize="40px"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginBottom="35px">

        <TextView
            android:id="@+id/tv_to_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_todo"
            android:background="@drawable/white_corners2_icon"
            android:paddingBottom="16px"
            android:paddingLeft="32px"
            android:paddingRight="34px"
            android:paddingTop="16px"
            android:text="办事指南"
            android:textColor="@color/blue_main"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="51px"
            android:background="@drawable/blue2_corners2_icon"
            android:paddingBottom="16px"
            android:paddingLeft="32px"
            android:paddingRight="34px"
            android:paddingTop="16px"
            android:text="立即办事"
            android:textColor="#ffffff"
            android:textSize="30px" />
    </RelativeLayout>
</LinearLayout>