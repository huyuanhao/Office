<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/px40">

    <RelativeLayout
        android:id="@+id/layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="85px"
            android:layout_height="50px"
            android:layout_marginRight="15px"
            android:layout_marginTop="6px"
            android:background="@drawable/rect_line_red"
            android:gravity="center"
            android:text="热点"
            android:textColor="@color/red"
            android:textSize="@dimen/px30" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_black_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hot"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title"
            android:textSize="@dimen/px50" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        style="@style/text_gray_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_ll"
        android:layout_marginTop="40px"
        android:textSize="34px"
        android:text="name" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_gray_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_ll"
        android:layout_marginTop="40px"
        android:text="time"
        android:textSize="34px" />
</RelativeLayout>