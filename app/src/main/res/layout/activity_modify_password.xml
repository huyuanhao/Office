<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_system_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:background="@drawable/layout_line_bg">

        <TextView
            style="@style/user_info_item_left"
            android:text="用户名：" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/widget_size_90"
            android:layout_marginRight="@dimen/widget_size_20"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingTop="@dimen/widget_size_8"
            android:paddingRight="@dimen/widget_size_15"
            android:paddingBottom="@dimen/widget_size_8"
            android:textSize="@dimen/font_size_13" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:background="@drawable/layout_line_bg">

        <TextView
            style="@style/user_info_item_left"
            android:text="原密码：" />

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/edt_current_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/widget_size_90"
            android:layout_marginRight="@dimen/widget_size_20"
            android:background="@color/transparent"
            android:hint="请输入你的密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingTop="@dimen/widget_size_8"
            android:paddingRight="@dimen/widget_size_15"
            android:paddingBottom="@dimen/widget_size_8"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_size_13" />


    </RelativeLayout>


