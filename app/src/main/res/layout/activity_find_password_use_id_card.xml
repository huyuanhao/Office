<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/common_title_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/input_id_card_num"
        android:textColor="@color/black"
        android:textSize="@dimen/ts14"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@color/split_line_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_id_card"
                style="@style/normal_item_name"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/id_card"
                android:maxLength="18"
                android:padding="@dimen/dp8"
                android:textColorHint="#666666"
                android:textSize="@dimen/ts14"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray_system_bg"/>
    </LinearLayout>


    <Button
        android:id="@+id/bt_next"
        style="@style/normal_item_name"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_20"
        android:background="@drawable/blue_corners_icon"
        android:padding="@dimen/padding_10"
        android:text="@string/next_step"
        android:textColor="@color/white"/>

</LinearLayout>