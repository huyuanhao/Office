<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_iwant_suggestion"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="2"
                    android:background="@drawable/zxts_wyjy_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_suggest" />

                    <TextView
                        style="@style/normal_item_name"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="@string/consulting_iwant_suggestion"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_iwant_consulting"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/zxts_wyzx_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_consult" />

                        <TextView
                            style="@style/normal_item_name"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/padding_10"
                            android:text="@string/consulting_iwant_consulting"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lead_mail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/zxts_ldxx_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_lead_mailbox" />

                        <TextView
                            style="@style/normal_item_name"
                            android:layout_marginLeft="@dimen/padding_10"
                            android:text="@string/consulting_lead_mail"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_iwant_complaint"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/zxts_wyts_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_complain" />

                    <TextView
                        style="@style/normal_item_name"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:text="@string/consulting_iwant_complaint"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_declare"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/zxts_wyjb_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_report" />

                    <TextView
                        style="@style/normal_item_name"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:text="@string/consulting_iwant_declare"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#405161"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_w_wypj" />

            <TextView
                style="@style/normal_item_name"
                android:layout_marginLeft="@dimen/padding_5"
                android:text="@string/consulting_iwant_evaluate"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#405161"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_w_wycx" />

            <TextView
                style="@style/normal_item_name"
                android:layout_marginLeft="@dimen/padding_5"
                android:text="@string/consulting_iwant_query"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#405161"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_w_lsxj" />

            <TextView
                style="@style/normal_item_name"
                android:layout_marginLeft="@dimen/padding_5"
                android:text="@string/consulting_iwant_history_mail"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>