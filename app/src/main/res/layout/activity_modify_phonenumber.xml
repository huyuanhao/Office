<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_140"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/widget_size_30">

        <!--<ImageView-->
        <!--android:id="@+id/iv_step"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_verify1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_phonenum_done_sel"
                android:gravity="center"
                android:text="身份验证"
                android:textColor="@color/main_select_color"
                android:textSize="@dimen/font_size_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:layout_marginRight="@dimen/widget_size_5"
                android:background="@drawable/icon_bphone_line"
                android:layout_marginBottom="@dimen/widget_size_5"
                />

            <TextView
                android:id="@+id/tv_verify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_phonenum_done_sel"
                android:gravity="center"
                android:text="绑定手机"
                android:textColor="@color/main_select_color"
                android:textSize="@dimen/font_size_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:layout_marginRight="@dimen/widget_size_5"
                android:layout_marginBottom="@dimen/widget_size_5"
                android:background="@drawable/icon_bphone_line" />

            <TextView
                android:id="@+id/tv_verify3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_phonenum_done_sel"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/main_select_color"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lt_valicode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_current_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_size_15"
            android:text="当前绑定手机号:18602587858"
            android:textSize="@dimen/font_size_14" />
        <RelativeLayout
            android:id="@+id/rlt_pn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:background="@color/white">
        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_new_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:background="@null"
            android:hint="请输入新的手机号码"
            android:inputType="phone"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_size_14"
           />
        </RelativeLayout>
        <include layout="@layout/default_line_0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:background="@color/white">

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_vetify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/widget_size_15"
                android:background="@null"
                android:hint="请输入验证码"
                android:layout_toLeftOf="@+id/bt_vetify"
                android:inputType="phone"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/bt_vetify"
                android:layout_width="@dimen/widget_size_100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_marginRight="@dimen/widget_size_8"
                android:background="@drawable/valicode_selecter"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_50"
        android:gravity="center"
        android:text="手机号码变更已完成\r\n下次登录可以换新手机号"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_40"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginRight="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_100"
        android:background="@drawable/blue_corners_dp"
        android:gravity="center"
        android:text="验证"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_14" />


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_40"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginRight="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_20"
        android:background="@drawable/white_corners_dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue_main"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>