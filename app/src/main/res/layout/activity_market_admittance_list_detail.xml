<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35px"
        android:paddingRight="35px"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <TextView
                    style="@style/normal_item_text"
                    android:gravity="center"
                    android:text="@string/approve_date"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_exploiting_work_unit"
                    style="@style/normal_item_name"
                    android:text=""
                    android:textSize="45px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <TextView
                    style="@style/normal_item_text"
                    android:gravity="center"
                    android:text="@string/approve_enterprise"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_project_name"
                    style="@style/normal_item_name"
                    android:text=""
                    android:textSize="45px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <TextView
                    style="@style/normal_item_text"
                    android:gravity="center"
                    android:text="@string/fail_describe"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_sub_item_name"
                    style="@style/normal_item_name"
                    android:text=""
                    android:textSize="45px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <TextView
                    style="@style/normal_item_text"
                    android:gravity="center"
                    android:text="@string/link"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_sub_item_exploiting_work_unit"
                    style="@style/normal_item_name"
                    android:text=""
                    android:textSize="45px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35px"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <TextView
                    style="@style/normal_item_text"
                    android:gravity="center"
                    android:text="@string/pid"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_power_type"
                    style="@style/normal_item_name"
                    android:text=""
                    android:textSize="45px" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>