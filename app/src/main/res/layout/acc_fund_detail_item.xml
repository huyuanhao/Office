<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_corner_bg"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46px"
        android:layout_marginLeft="19px"
        android:layout_marginRight="19px"
        android:textSize="46px"
        android:textColor="#333333"
        android:text="2018-5-5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="84px"
            android:layout_marginLeft="19px"
            android:layout_marginRight="19px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hj"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="46px"
                android:textColor="#666666"
                android:text="汇缴：转出"/>
            <TextView
                android:id="@+id/balance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="46px"
                android:textColor="#666666"
                android:text="余额：2472.56"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="78px"
            android:layout_marginLeft="19px"
            android:layout_marginBottom="37px"
            android:layout_marginRight="19px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/jf"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="46px"
                android:textColor="#666666"
                android:text="借方发生额：00"/>
            <TextView
                android:id="@+id/df"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="46px"
                android:textColor="#666666"
                android:text="贷方发生额：5685.2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>