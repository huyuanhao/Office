<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_50"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_size_35"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/widget_size_12"
        android:layout_weight="6"
        android:background="@drawable/white_shape"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_search_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/widget_size_5"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/widget_size_5"
            android:hint="请输入关键词"
            android:inputType="text"
            android:textColorHint="@color/gray"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_12" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_size_35"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/widget_size_7"
        android:layout_marginRight="@dimen/widget_size_7"
        android:layout_weight="1"
        android:background="@drawable/shape_app_button_5"
        android:text="搜索"
        android:textSize="@dimen/font_size_13"
        android:textColor="@color/white" />
</LinearLayout>