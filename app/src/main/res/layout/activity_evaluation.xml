<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/widget_size_15"
        android:layout_marginTop="@dimen/widget_size_15"
        android:text="评价"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

    <include layout="@layout/default_line_0"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_size_80"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/star_gray" />

        <TextView
            android:id="@+id/tv_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/star_gray" />

        <TextView
            android:id="@+id/tv_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/star_gray" />

        <TextView
            android:id="@+id/tv_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/star_gray" />

        <TextView
            android:id="@+id/tv_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_20"
            android:background="@drawable/star_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="非常满意，无可挑剔"
        android:textColor="@color/main_select_color"
        android:textSize="@dimen/font_size_17" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_100"
        android:layout_marginLeft="@dimen/widget_size_15"
        android:layout_marginRight="@dimen/widget_size_15"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:background="@color/order_normal_color">

        <com.powerrich.office.oa.view.NoEmojiEditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_5"
            android:layout_marginTop="@dimen/widget_size_5"
            android:background="@color/transparent"
            android:gravity="left|top"
            android:hint="请输入你的评价"
            android:maxLength="500"
            android:minLines="5"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_size_15" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_size_70"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="@dimen/widget_size_100"
                android:layout_height="wrap_content"
                android:background="@drawable/blue2_corners_icon_dp"
                android:layout_marginRight="@dimen/widget_size_5"
                android:gravity="center"
                android:padding="@dimen/widget_size_10"
                android:text="提交"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/widget_size_100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:background="@drawable/gray2_corners2_dp"
                android:gravity="center"
                android:padding="@dimen/widget_size_10"
                android:text="暂不提交"
                android:textColor="@color/gray" />
        </LinearLayout>

        <include layout="@layout/default_line_0"></include>

        <CheckBox
            android:id="@+id/cb_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_size_15"
            android:button="@null"
            android:drawableLeft="@drawable/check_box_bg_selector"
            android:drawablePadding="@dimen/widget_size_5"
            android:text="匿名评价"
            android:textColor="@color/gray" />

    </LinearLayout>
</LinearLayout>