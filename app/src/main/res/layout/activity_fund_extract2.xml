<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="收款银行账号"/>

        <EditText
            android:id="@+id/tv_bank_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textSize="46px"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:maxLength="26"
            android:textColor="@color/color_999999"
            android:hint="输入银行账号"/>
    </LinearLayout>

    <include layout="@layout/line_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:paddingLeft="40px"
        android:gravity="center_vertical"
        android:paddingRight="40px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="46px"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_0e0e0e"
            android:text="收款人银行"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_marginLeft="40px"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="46px"
            android:hint="请输入银行名称"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray_color"/>
        <TextView
            android:id="@+id/tv_query"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="46px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color_0e0e0e"
            android:text="查询"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="800px"
        android:layout_height="120px"
        android:background="@drawable/blue2_corners2_icon"
        android:layout_marginTop="100px"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="添加"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="800px"
        android:layout_height="120px"
        android:background="@drawable/blue2_corners2_icon"
        android:layout_marginTop="50px"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="返回"/>
</LinearLayout>