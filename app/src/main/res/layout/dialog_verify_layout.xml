<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_shape">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:gravity="center"
            android:text="请选择认证方式"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/color_333333"/>

        <include layout="@layout/default_line_0"/>

        <TextView
            android:id="@+id/tv_normal"
            android:layout_below="@id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:gravity="center"
            android:text="普通认证"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/button_bg"
           />
        <include layout="@layout/default_line_0"/>

        <TextView
            android:id="@+id/tv_eid"
            android:layout_below="@+id/tv_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:gravity="center"
            android:text="eid认证"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/button_bg"/>
        <include layout="@layout/default_line_0"/>

        <TextView
            android:layout_below="@+id/tv_eid"
            android:id="@+id/tv_cencel"
            android:layout_width="@dimen/widget_size_150"
            android:layout_height="@dimen/widget_size_40"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_20"
            android:layout_marginBottom="@dimen/widget_size_20"
            android:background="@drawable/blue_corners_5px"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"
            />
    </LinearLayout>


</LinearLayout>