<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">


    <!--android:drawableLeft="@drawable/cb_appbg1"-->
    <CheckBox
        android:id="@+id/cb_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_box_bg_selector"
        android:drawablePadding="@dimen/widget_size_5"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_12"
        android:layout_below="@+id/tv_address_name"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/widget_size_10"
        android:layout_marginBottom="@dimen/widget_size_3"/>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/widget_size_80"
        android:layout_height="@dimen/widget_size_60"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginLeft="@dimen/widget_size_10"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:background="@drawable/ic_electronic_certificate"/>

    <LinearLayout
        android:layout_width="@dimen/widget_size_150"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginLeft="@dimen/widget_size_10"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_16"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="身份证"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13"
            android:layout_marginTop="@dimen/widget_size_7"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="有效期至:2022年5月20日"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginLeft="@dimen/widget_size_10"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:layout_marginRight="@dimen/widget_size_10"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/black"
            android:text="陈志强"/>
        <TextView
            android:id="@+id/tv_num_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/widget_size_7"
            android:maxLines="2"

            android:ellipsize="end"
            android:text="******123963"/>
    </LinearLayout>
</LinearLayout>
