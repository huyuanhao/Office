<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corners_dp"
    android:layout_marginLeft="@dimen/widget_size_15"
    android:layout_marginTop="@dimen/widget_size_15"
    android:layout_marginRight="@dimen/widget_size_15"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginLeft="@dimen/widget_size_7"
        android:layout_marginRight="@dimen/widget_size_7"
        android:layout_marginBottom="@dimen/widget_size_7">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16"
            android:text="湖北广通智城软件有限公司"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <include layout="@layout/default_line_5"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_686868"
        android:textSize="@dimen/font_size_14"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginLeft="@dimen/widget_size_7"
        android:layout_marginRight="@dimen/widget_size_7"
        android:layout_marginBottom="@dimen/widget_size_10"/>
</LinearLayout>