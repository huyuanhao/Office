<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_send_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_10"
            android:layout_marginTop="@dimen/dp10"
            android:drawablePadding="@dimen/widget_size_30"
            android:drawableRight="@drawable/icon_mywalk_direction"
            android:text="陈先生  "
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_send_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_15"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="end"
            android:lines="1"
            android:singleLine="true"
            android:text="XX市行政服务中心市名"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/widget_size_10"
        android:layout_marginRight="@dimen/widget_size_10"
        android:background="@color/colorBtnDisabled" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_55"
        android:layout_marginTop="@dimen/widget_size_3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_send_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:text="运单号：46464684689"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_5"
                android:text="2018-05-02 21:33:21"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/widget_size_20"
            android:gravity="center"
            android:text="已下单"
            android:textSize="@dimen/font_size_14" />
    </RelativeLayout>


</LinearLayout>