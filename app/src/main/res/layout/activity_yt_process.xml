<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_system_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_size_35"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_12"
            android:layout_weight="6"
            android:background="@drawable/white_shape">

            <com.powerrich.office.oa.view.NoEmojiEditText
                android:id="@+id/et_search_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="@dimen/widget_size_5"
                android:focusable="false"
                android:hint="请输入关键词"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_size_35"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_7"
            android:layout_marginRight="@dimen/widget_size_7"
            android:layout_weight="1"
            android:background="@drawable/shape_app_button_5"
            android:text="搜索"
            android:textColor="@color/white" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/flt_process_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"></FrameLayout>

    <LinearLayout
        android:id="@+id/lt_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/widget_size_12"
        android:background="@color/white"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_12" />

        <TextView
            android:id="@+id/tv_select_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="全选      共选择3条数据"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_del"
                android:layout_width="@dimen/widget_size_60"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/main_select_color"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>