<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:background="@color/blue_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="62px"
        android:layout_width="match_parent"
        android:layout_height="138px">

        <ImageView
            android:id="@+id/system_back"
            android:layout_width="115px"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:src="@drawable/white_icon_back"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="55px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_top_right"
            android:layout_width="115px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:src="@drawable/white_icon_home"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35px"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="50px"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_custom_right"
            style="@style/common_top_btn"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toLeftOf="@id/btn_top_right"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>