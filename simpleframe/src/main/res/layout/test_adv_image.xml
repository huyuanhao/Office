<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_200"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/glide_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/widget_size_200"
        android:layout_centerInParent="true" />

    <fan.com.httpframe.imageloder.progress.CircleProgressView
        android:id="@+id/progressView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:progress="0"
        app:cpv_progressNormalColor="@color/colorPrimary"
        app:cpv_progressReachColor="@color/white"
        app:cpv_progressStyle="FillInner"
        app:cpv_progressTextColor="@color/red"
        app:cpv_progressTextSize="13sp"
        android:visibility="gone"
        app:cpv_progressTextVisible="false" />
</RelativeLayout>